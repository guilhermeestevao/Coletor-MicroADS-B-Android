<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="si.ufc.br.coletor2microadsb" >

    <uses-feature android:name="android.hardware.usb.host" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:configChanges="orientation"
            android:label="@string/app_name"
            android:screenOrientation="landscape" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.hardware.usb.action.USB_DEVICE_ATTACHED" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <meta-data
                android:name="android.hardware.usb.action.USB_DEVICE_ATTACHED"
                android:resource="@xml/device_filter" />
        </activity>
        <activity
            android:name=".SetingsActivity"
            android:configChanges="orientation"
            android:label="@string/title_activity_setings"
            android:screenOrientation="landscape" >
        </activity>
        <receiver android:name=".services.VerificaConexao">
            <intent-filter>
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE" />
            </intent-filter>
        </receiver>
        <service android:name=".services.SincronizaMensagens">
            <intent-filter>
                <action android:name="SINCRONIZAR_MENSGENS"/>
            </intent-filter>
        </service>
        <service android:name=".services.CapturaMensagens">
            <intent-filter>
                <action android:name="INICIAR_CAPTURA_MENSAGENS"/>
            </intent-filter>
        </service>
    </application>
</manifest>
